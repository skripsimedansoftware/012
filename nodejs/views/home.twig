{% extends 'base.twig' %}

{% block title %}Service Worker - WebPush{% endblock %}

{% block content %}
<div class="container" style="margin-bottom: 10%;">
	<div class="starter-template">
		<h1>Service Worker Push - Testing</h1>
		<form id="send-push">
			<div class="form-group">
				<label>Public Key</label>
				<input class="form-control" type="text" name="public_key" placeholder="Public Vapid Key">
			</div>
			<div class="form-group">
				<label>Private Key</label>
				<input class="form-control" type="text" name="private_key" placeholder="Private Vapid Key">
			</div>
			<div class="form-group">
				<label>Push Subscription (JSON)</label>
				<textarea class="form-control" name="subscription" placeholder="Push Subscription"></textarea>
			</div>
			<div class="form-group">
				<label>Notification Title</label>
				<input class="form-control" type="text" name="notification_title" placeholder="Notification Title">
			</div>
			<div class="form-group">
				<label>Notification Body</label>
				<input class="form-control" type="text" name="notification_body" placeholder="Notification Body">
			</div>
			<div class="form-group">
				<button class="btn btn-success">Send</button>
			</div>
			<div class="form-group">
				<p>Didn't Have Vapid Key? <a href="/vapid_key">Generate Here</a></p>
			</div>
		</form>
	</div>
</div>
{% endblock %}