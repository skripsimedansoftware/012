<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
		<meta name="description" content="">
		<meta name="author" content="">
		<link rel="icon" href="/favicon.ico">
		<link rel="canonical" href="https://getbootstrap.com/docs/3.4/examples/starter-template/">
		<title>{% block title %}{% endblock %}</title>
		<!-- Bootstrap core CSS -->
		<link href="/assets/bootstrap/v3/dist/css/bootstrap.min.css" rel="stylesheet">
		<link href="/assets/web/css/style.css" rel="stylesheet">
		<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
		<!--[if lt IE 9]>
		<script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
		<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->
	</head>
	<body>
		{% include 'components/navbar.twig' %}
		{% block content %}{% endblock %}
		{% include 'components/footer.twig' %}
		<script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha384-nvAa0+6Qg9clwYCGGPpDQLVpLNn0fRaROjHqs13t4Ggj3Ez50XnGQqc/r8MhnRDZ" crossorigin="anonymous"></script>
		<script type="text/javascript">
		$('#send-push').on('submit', (e) => {
			e.preventDefault();
			$.ajax({
				url: '/',
				type: 'POST',
				dataType: 'JSON',
				data: {
					vapid: {
						public: $('input[name="public_key"]').val(),
						private: $('input[name="private_key"]').val()
					},
					subscription: $('textarea[name="subscription"]').val(),
					notification: {
						title: $('input[name="notification_title"]').val(),
						options: {
							body: $('input[name="notification_body"]').val(),
							data: {
								campaign_id: 1,
								open_url: 'https://github.com/medansoftware'
							}
						}
					}

				},
				success: (data) => {
					console.log(data);
				},
				error: (error) => {
					console.log(error);
				}
			});

		});
		</script>
		<script src="/assets/bootstrap/v3/dist/js/bootstrap.min.js"></script>
	</body>
</html>